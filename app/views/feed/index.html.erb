<%= render "partials/nav" %>
<div class="feed">
  <div class="post-new">
    <%= render "posts/formv2" %>
  </div>

  <% @posts.each do |post| %>
    <div class="card">
      <div class="card-body">
        <div class="head">
          <div class="post-avatar">
            <%= image_tag post.user.avatar_thumbnail, :class => "post-thumbnail" %>
          </div>
          <div class="post-title">  
            <p> <%= link_to(post.user.username, profile_user_path(post.user.id)) %></p>
            <p><%= I18n.l(post.created_at, format: '%d de %B de %Y') %></p>
          </div>
        </div>
        <br>
        <div class="post-content">
          <%= post.content %>
        </div>
        <br>
        <% if post.image.attached? %>
          <div class="image-wrapper">
            <%= image_tag post.image_thumbnail %>
          </div>
        <% end %>
        <% if post.video.attached? %>
          <%= video_tag(url_for(post.video), :controls => "", :width => "500", :height => "400") %>
        <% end %>

      <% pre_like = post.likes.find { |like| like.user_id == current_user.id} %>
      <% if pre_like %>
        <%= link_to post_like_path(post, pre_like), method: :delete do %>
          <i class="fas fa-heart"></i>
        <% end %>
      <% else %>
        <%= link_to post_likes_path(post), method: :post do %>
          <i class="far fa-heart"></i>
        <% end %>
      <% end %>
        <p><%= post.likes.count %> <%= (post.likes.count) == 1 ? 'Me gusta' : 'Me gustan'%></p>
      </div>
    </div>
  <% end %>

