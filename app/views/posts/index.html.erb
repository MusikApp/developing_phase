<p id="notice"><%= notice %></p>

<h1>Posts</h1>

  
    <% @posts.each do |post| %>
    <div class="card">
        <%= post.content %>
        <% if post.image.attached? %>
          <div class="image-wrapper">
            <%= image_tag post.image_thumbnail %>
          </div>
        <% end %>
        <% if post.video.attached? %>
          <video
            id="my-video"
            class="video-js"
            controls
            preload="auto"
            width="500"
            height="400"
            poster="<%= url_for(post.video) %>"
            data-setup="{}"
          >
            <source src="<%= url_for(post.video) %>"/>
          </video>
        <% end %>
        <ul class="d-inline-flex test">
          <li><%= link_to 'Show', post %></li>
          <li><%= link_to 'Edit', edit_post_path(post) %></li>
          <li><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></li>
        </ul>
    </div>
      <% end %>



