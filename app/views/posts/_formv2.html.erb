<%= form_with url: posts_path, method: :post do |form| %>
    <div class="field">
        <%= form.text_area :content, :placeholder => "¿Qué hay de nuevo?" %>
    </div>

    <div class="post-actions ">
        <div class="field">
            <label class="btn btn-file">
            <i class="fas fa-image"></i>
            <%= form.file_field :image, accept: "image/*" %>
            </label>
        </div>

        <div class="field">
            <label class="btn btn-file">
            <i class="fas fa-film"></i>
            <%= form.file_field :video, accept: "video/*" %>
            </label>
        </div>

        <div class="actions">
            <button type="submit" name="commit" class="post-submit">Publicar</button>
        </div>
    </div>
<% end %>