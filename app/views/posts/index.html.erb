<p id="notice"><%= notice %></p>

<h1>Posts</h1>


  
    <% @posts.each do |post| %>
    <div class="card">
        <%= post.content %>
        <% if post.file.attached? %>
          <% unless post.file.filename.to_s.include? "image" %>
            <%= image_tag post.file %>
          <% end %>
          <% unless post.file.filename.to_s.include? "video" %>
            <video src="<%= post.file %>"></video>
          <% end %>
        <% end %>
        <ul class="d-inline-flex test">
          <li><%= link_to 'Show', post %></li>
          <li><%= link_to 'Edit', edit_post_path(post) %></li>
          <li><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></li>
        </ul>
    </div>
      <% end %>



