<div class="signup-form">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "nombre" %>
      <%= f.text_field :last_name, placeholder: "apellido" %>
    </div>

    <div class="field">
      <%= f.text_field :username, placeholder: "nombre de usuario" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "correo@ejemplo.com" %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "contraseña (6 caracteres mínimo)" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "confirmar constraseña" %>
    </div>

    <div class="actions">
      <%= f.submit "Registrarme", class: "signup-button" %><br />
    </div>
  <% end %>
</div>

