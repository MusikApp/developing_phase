<div class="container-fluid">
  <div class="row">
    <div class="col-3 rooms-sidebar">
      <div class="card no-outline">
        <div class="card-body">
          <small>Bienvenido:</small><br>
          <b><%= current_user.username %><br></b>
        </div>
      </div>
      <hr>

      <% @users.each do |user| %>
          <%= link_to user.username, rooms_path(user_id: user), method: :post %>
      <% end %>

      
      <%#= render 'form', room: Room.new %>
      <hr>

      <% @rooms.each do |room| %>
        <%= link_to room, class: 'room-link' do %>
        <% active_class = (@room == room) ? 'active' : '' %>
          <div class="card no-outline mb-2 room-card <%= active_class %>" data-room-id="<%= room.id %>">
            <div class="card-body">
              <span class='name'><%= room.opposed_user(current_user).name %> <%= link_to "x" %></span><br>

              <span class='member-count'>
                <small><%= room.users.uniq.count %> Miembros</small>
              </span>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
    <div class="col-9">
      <% if @room.present? %>
        <div class="chat-room">
          <nav class="navbar navbar-light">
            <span class="navbar-brand" href="#">
              <b><%= @room.opposed_user(current_user).name %></b>
            </span>
            <small><%= @room.users.uniq.count %> Members</small>
          </nav>
          <div id="messages">
            <% @room.messages.each do |message| %>
              <%= render 'messages/message', message: message %>
            <% end %>
          </div>
          <div class="chat-box">
            <%= render 'messages/form', message: Message.new, room: @room %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>